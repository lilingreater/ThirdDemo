                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.leoly.guglefile.activities.NotePadActivity"
            android:label="@string/notepad" >
