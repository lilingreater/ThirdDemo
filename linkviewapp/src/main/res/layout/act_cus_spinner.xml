<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bigkoo.pickerviewdemo.ActCusSpinner">

    <LinearLayout
        android:id="@+id/ll_select_course"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colornav"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_select_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="人力资源一级"
            android:textColor="@color/colormaintext"
            android:textSize="17sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colordivider" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/nav_ic_xia" />

            <ImageView
                android:id="@+id/iv_select_course"
                android:layout_marginBottom="-1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/nav_ic_shang"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="排序" />

        <Spinner
            android:id="@+id/sp_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/record_order"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_order_type"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_grey_shap"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="全部"
                android:textColor="@color/colormain"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:background="@color/colordivider" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/my_ic_jiao" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
